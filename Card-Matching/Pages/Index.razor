@page "/"

<MudGrid>
	<MudItem xs="12" Class="d-flex align-center justify-center">
		<MudIconButton @onclick="Refresh" Size="Size.Large" Icon="@Icons.Material.Filled.Refresh"></MudIconButton>
		<MudIconButton @onclick="Pause" Size="Size.Large" Icon="@Icons.Material.Filled.Pause"></MudIconButton>
	</MudItem>
	@foreach (var item in _deck.Cards)
	{
		<MudItem xs="6" sm="3" @onclick="() => OnOpenCard(item.Id)">
			<MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
				<MudText Typo="Typo.h3">@item.DisplayName()</MudText>
			</MudPaper>
		</MudItem>
	}
</MudGrid>

<MudOverlay @bind-Visible="isPause" DarkBackground="true" Absolute="true">
	<MudIconButton @onclick="Refresh" Size="Size.Large" Icon="@Icons.Material.Filled.Refresh"></MudIconButton>
	@if (_gameState != GameStatus.Over)
	{
		<MudIconButton @onclick="Pause" Size="Size.Large" Icon="@Icons.Material.Filled.PlayArrow"></MudIconButton>
	}
</MudOverlay>